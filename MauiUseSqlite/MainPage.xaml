<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUseSqlite.MainPage"
             Title="用户管理">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#FF914C" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
              
                </Grid.RowDefinitions>

                <!-- 搜索和新建按钮 -->
                <Border>
                    <StackLayout Orientation="Horizontal">
                        <Entry x:Name="searchEntry"
                               WidthRequest="200"
                               Placeholder="输入用户名搜索" />
                        <Button Text="搜索姓名"
                                Clicked="OnSearchClicked"
                                Margin="10,0" />
                        <!--<Button Text="新建"
                                Clicked="OnCreateClicked"
                                Margin="10,0" />-->
                    </StackLayout>
                </Border>

                <!-- 用户编辑区域 -->
                <Border Grid.Row="1" IsVisible="Collapse">
                    <ScrollView Orientation="Horizontal"
                                HorizontalScrollBarVisibility="Always">
                        <HorizontalStackLayout Spacing="10"
                                               VerticalOptions="Center">
                            <!-- 序号 -->
                            <Label Text="序号："
                                   VerticalOptions="Center" />
                            <Label x:Name="idLabel"
                                   Text="0"
                                   VerticalOptions="Center" />

                            <!-- 用户名 -->
                            <Label Text="用户名："
                                   VerticalOptions="Center" />
                            <Entry x:Name="userNameEntry"
                                   WidthRequest="150"
                                   VerticalOptions="Center" />

                            <!-- 密码 -->
                            <Label Text="密码："
                                   VerticalOptions="Center" />
                            <Entry x:Name="passwordEntry"
                                   WidthRequest="150"
                                   VerticalOptions="Center"
                                   IsPassword="true" />

                            <!-- 权限 -->
                            <Label Text="权限："
                                   VerticalOptions="Center" />
                            <Entry x:Name="roleEntry"
                                   WidthRequest="100"
                                   VerticalOptions="Center" />

                            <!-- 按钮 -->
                            <Button Text="保存/修改"
                                    Clicked="OnSaveOrUpdateClicked"
                                    Margin="10,0" />
                            <Button Text="删除"
                                    Clicked="OnDeleteClicked"
                                    Margin="10,0" />
                        </HorizontalStackLayout>
                    </ScrollView>
                </Border>

                <Border Grid.Row="2">
                    <StackLayout Orientation="Horizontal">
                        <Button Text="新增"
                                Clicked="AddUserClicked"
                                Margin="10,0" />
                        <Button Text="修改"
                                Clicked="UpdateUserClicked"
                                Margin="10,0" />
                        <Button Text="删除"
                                Clicked="OnDeleteClicked"
                                Margin="10,0" />
                    </StackLayout>
                </Border>
                <!-- 用户列表 -->
                <Border Grid.Row="3"
                        Stroke="LightGray"
                        StrokeThickness="1">
                    <CollectionView x:Name="usersCollectionView"
                                    SelectionMode="Single"
                                    SelectionChanged="UsersCollectionView_SelectionChanged">
                        <!--SelectionChanged="UsersCollectionView_SelectionChanged"-->
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10"
                                      ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Text="{Binding Id}"
                                           VerticalOptions="Center" />

                                    <Label Grid.Column="1"
                                           Text="{Binding UserName}"
                                           VerticalOptions="Center" />

                                    <Label Grid.Column="2"
                                           Text="{Binding Password}"
                                           VerticalOptions="Center" />

                                    <Label Grid.Column="3"
                                           Text="{Binding Role}"
                                           VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <!-- 表头 -->
                        <CollectionView.Header>
                            <Grid Padding="10"
                                  ColumnSpacing="10"
                                  BackgroundColor="LightGray">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Text="序号"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="1"
                                       Text="用户名"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="2"
                                       Text="密码"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="3"
                                       Text="权限"
                                       FontAttributes="Bold" />
                            </Grid>
                        </CollectionView.Header>
                    </CollectionView>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
